version: '3.1'

services:
    php:
        build:
            context: .
            dockerfile: Dockerfile
        volumes:
            - .:/var/www/html
        ports:
            - "8080:80"
        depends_on:
            - mysql
        environment:
            - PHP_VERSION=8.4

    mysql:
        image: mysql:8.0
        environment:
            - MYSQL_ROOT_PASSWORD=root
            - MYSQL_DATABASE=todo
            - MYSQL_PASSWORD=root
        volumes:
          - mysql_data:/var/lib/mysql

volumes:
    mysql_data: